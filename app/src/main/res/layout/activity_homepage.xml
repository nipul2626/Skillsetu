<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootMotionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    app:layoutDescription="@xml/home_motion_scene"
    tools:context=".activity_homepage">

    <!-- Frosted blur could be achieved with RenderEffect in code; here we emulate with semi-transparency -->

    <!-- ========== HEADER ========== -->

    <!-- Logo + orbiting particles -->
    <FrameLayout
        android:id="@+id/headerLogoContainer"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Lottie orbit particles (replace fileName with your downloaded JSON) -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieOrbit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="ai_orbit.json" />

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_logo_circle"
            android:padding="16dp"
            android:src="@drawable/ic_ai_logo"
            android:scaleType="centerInside" />
    </FrameLayout>

    <TextView
        android:id="@+id/txtAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="AI Placement Coach"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/headerLogoContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:text="Train Smart. Interview Better. Get Placed."
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:alpha="0.9"
        app:layout_constraintTop_toBottomOf="@id/txtAppTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Glowing pill CTA -->
    <TextView
        android:id="@+id/txtHeaderCta"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center"
        android:text="Ready for your mock interview?"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:background="@drawable/bg_pill_glow"
        app:layout_constraintTop_toBottomOf="@id/txtSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable content below header -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="96dp"
        app:layout_constraintTop_toBottomOf="@id/txtHeaderCta"
        app:layout_constraintBottom_toTopOf="@id/btnStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:dividerPadding="12dp"
            android:showDividers="none">

            <!-- ===== 2x2 INTERVIEW TYPE GRID ===== -->
            <TextView
                android:id="@+id/labelInterviewType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose interview type"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <GridLayout
                android:id="@+id/gridInterviewType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <!-- HR Interview -->
                <LinearLayout
                    android:id="@+id/cardHr"
                    style="@style/GlassCard.Small"
                    android:orientation="vertical"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/hr_ic"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="HR Interview"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Technical -->
                <LinearLayout
                    android:id="@+id/cardTechnical"
                    style="@style/GlassCard.Small"
                    android:orientation="vertical"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_technical"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Technical"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Aptitude -->
                <LinearLayout
                    android:id="@+id/cardAptitude"
                    style="@style/GlassCard.Small"
                    android:orientation="vertical"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_aptitude"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Aptitude"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Mixed -->
                <LinearLayout
                    android:id="@+id/cardMixed"
                    style="@style/GlassCard.Small"
                    android:orientation="vertical"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_mixed"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Mixed"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />
                </LinearLayout>
            </GridLayout>

            <!-- ===== TARGET JOB ROLE PILLS ===== -->
            <TextView
                android:id="@+id/labelRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Target job role"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/groupRolePills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pillRoleSde"
                        style="@style/RolePill"
                        android:text="Software Developer" />

                    <TextView
                        android:id="@+id/pillRoleData"
                        style="@style/RolePill"
                        android:text="Data Analyst" />

                    <TextView
                        android:id="@+id/pillRoleWeb"
                        style="@style/RolePill"
                        android:text="Web Developer" />

                    <TextView
                        android:id="@+id/pillRoleCore"
                        style="@style/RolePill"
                        android:text="Core Engineering" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- ===== AI FEATURES GRID ===== -->
            <TextView
                android:id="@+id/labelFeatures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="4dp"
                android:text="AI features"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />

            <GridLayout
                android:id="@+id/gridFeatures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:useDefaultMargins="true">

                <!-- Each feature card uses same style; we animate them in stagger via MotionLayout -->

                <LinearLayout
                    android:id="@+id/cardAiQuestions"
                    style="@style/GlassCard.Feature">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_questions"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="AI Questions"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardChat"
                    style="@style/GlassCard.Feature">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_chat"
                        app:tint="@android:color/white" />

                    <!-- Typing dots indicator -->
                    <LinearLayout
                        android:id="@+id/typingDots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="8dp">

                        <View
                            android:id="@+id/dot1"
                            style="@style/TypingDot" />
                        <View
                            android:id="@+id/dot2"
                            style="@style/TypingDot" />
                        <View
                            android:id="@+id/dot3"
                            style="@style/TypingDot" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardTimed"
                    style="@style/GlassCard.Feature">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_timer"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Timed Responses"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardConfidence"
                    style="@style/GlassCard.Feature">

                    <!-- Progress ring as circular ProgressBar -->
                    <ProgressBar
                        android:id="@+id/progressConfidence"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="65"
                        android:rotation="-90"
                        android:progressDrawable="@drawable/progress_ring" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Confidence AI"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardTracker"
                    style="@style/GlassCard.Feature">

                    <!-- Animated bars placeholder -->
                    <LinearLayout
                        android:id="@+id/progressBars"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/bar1"
                            style="@style/ProgressBarMini" />
                        <View
                            android:id="@+id/bar2"
                            style="@style/ProgressBarMini" />
                        <View
                            android:id="@+id/bar3"
                            style="@style/ProgressBarMini" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Progress Tracker"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardMultiLang"
                    style="@style/GlassCard.Feature">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_language"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Multi-Language"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />
                </LinearLayout>
            </GridLayout>

            <!-- ===== COMING SOON ===== -->
            <TextView
                android:id="@+id/labelComingSoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Coming soon"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />

            <LinearLayout
                android:id="@+id/groupComingSoon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/cardVoice"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:alpha="0.6"
                    android:background="@drawable/bg_coming_soon_dashed">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Voice Interview"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />
                </LinearLayout>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:id="@+id/cardEmotion"
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:alpha="0.6"
                    android:background="@drawable/bg_coming_soon_dashed">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emotion AI"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- ===== PRIMARY CTA BUTTON ===== -->
    <TextView
        android:id="@+id/btnStart"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="⚡ Start AI Mock Interview ✨"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/bg_cta_button_disabled"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtHelper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Select interview type &amp; job role to continue"
        android:textColor="#E0FFFFFF"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@id/btnStart"
        app:layout_constraintStart_toStartOf="@id/btnStart"
        app:layout_constraintEnd_toEndOf="@id/btnStart" />

</androidx.constraintlayout.motion.widget.MotionLayout>