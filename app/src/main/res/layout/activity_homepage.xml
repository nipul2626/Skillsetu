<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <!-- Main Content (Your existing CoordinatorLayout content) -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_student_gradient">

        <!-- Your existing NestedScrollView and all content stays here -->

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/ivMenu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Menu"
                    android:padding="8dp"
                    android:src="@drawable/ic_menu" />

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/profile_circle_background"
                    android:contentDescription="Profile"
                    android:padding="8dp"
                    android:src="@drawable/ic_person" />
            </RelativeLayout>

            <!-- Hero Section - Placement Readiness -->
            <LinearLayout
                android:id="@+id/heroSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Circular Progress with Percentage -->
                <RelativeLayout
                    android:id="@+id/circularProgressContainer"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:clickable="true"
                    android:focusable="true"
                    >

                    <!-- Background Circle -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circular_progress_background" />

                    <!-- Animated Progress Circle -->
                    <ProgressBar
                        android:id="@+id/circularProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/circular_progress_foreground" />

                    <!-- Percentage Text -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textColor="@color/white"
                            android:textSize="36sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ready"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:alpha="0.8" />
                    </LinearLayout>
                </RelativeLayout>

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="AI Placement Coach"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.9"
                    android:text="Train Smart. Interview Better. Get Placed."
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <!-- CTA Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReadyInterview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#50FFFFFF"
                    android:paddingStart="24dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="12dp"
                    android:text="Ready for your mock interview?"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/baseline_arrow_forward_24"
                    app:iconGravity="end"
                    app:iconTint="@color/success_green" />
            </LinearLayout>

            <!-- Target Job Role Section -->
            <LinearLayout
                android:id="@+id/jobRoleSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target Job Role"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Horizontal ScrollView with 2 Rows -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/jobRolesContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Row 1 -->
                        <LinearLayout
                            android:id="@+id/jobRolesRow1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="horizontal">
                            <!-- Cards will be added programmatically -->
                        </LinearLayout>

                        <!-- Row 2 -->
                        <LinearLayout
                            android:id="@+id/jobRolesRow2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <!-- Cards will be added programmatically -->
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- Choose Interview Type Section -->
            <LinearLayout
                android:id="@+id/interviewTypeSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose Interview Type"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Interview Type Grid -->
                <GridLayout
                    android:id="@+id/interviewTypeGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:useDefaultMargins="true">

                    <!-- HR Interview Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardHRInterview"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:backgroundTint="#50FFFFFF"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <View
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/icon_background_circle" />

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_marginTop="-56dp"
                                android:padding="16dp"
                                android:src="@drawable/ic_chat"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="HR Interview"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Technical Interview Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardTechnicalInterview"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:backgroundTint="#50FFFFFF"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <View
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/icon_background_circle" />

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_marginTop="-56dp"
                                android:padding="16dp"
                                android:src="@drawable/ic_terminal"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Technical"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Aptitude Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardAptitude"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:backgroundTint="#50FFFFFF"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <View
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/icon_background_circle" />

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_marginTop="-56dp"
                                android:padding="16dp"
                                android:src="@drawable/ic_psychology"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Aptitude"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Mixed Interview Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardMixedInterview"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        android:backgroundTint="#50FFFFFF"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="6dp"><LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <View
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/icon_background_circle" />

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_marginTop="-56dp"
                            android:padding="16dp"
                            android:src="@drawable/ic_dashboard"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Mixed"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>
            </LinearLayout>

            <!-- Main CTA Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartInterview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/vibrant_button_gradient"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:text="Start AI Mock Interview"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"
                app:elevation="8dp"
                app:icon="@drawable/ic_bolt"
                app:iconGravity="start"
                app:iconSize="26dp" />

            <!-- Subtitle text below button -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:alpha="0.8"
                android:text="Select interview type &amp; job role to continue"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <View
        android:id="@+id/decorCircle1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="10dp"
        android:alpha="0.1"
        android:background="@drawable/circle_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/decorCircle2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="370dp"
        android:alpha="0.1"
        android:background="@drawable/circle_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer -->
<include
layout="@layout/nav_drawer_layout"
android:layout_width="300dp"
android:layout_height="match_parent"
android:layout_gravity="start" />
</androidx.drawerlayout.widget.DrawerLayout>