<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_tpo_gradient">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <!-- ========== HEADER ========== -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back"
                    android:padding="8dp"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCollegeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test College"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTPOName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome, TPO"
                        android:textColor="@color/success_green"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivRefresh"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Refresh"
                        android:padding="8dp"
                        android:src="@drawable/ic_refresh"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/ivExport"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Export"
                        android:padding="8dp"
                        android:src="@drawable/ic_download"
                        app:tint="@color/white" />
                </LinearLayout>
            </RelativeLayout>

            <!-- ========== STATS CARDS ========== -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:columnCount="2"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <!-- Card 1: Total Students -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/statsCard1"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#30FFFFFF"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_person"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/tvTotalStudents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.9"
                            android:text="Students"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:id="@+id/pbStats1"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="8dp"
                            android:max="100"
                            android:progress="0"
                            android:progressTint="@color/success_green" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 2: Total Interviews -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/statsCard2"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#30FFFFFF"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_chat"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/tvTotalInterviews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.9"
                            android:text="Interviews"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:id="@+id/pbStats2"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="8dp"
                            android:max="100"
                            android:progress="0"
                            android:progressTint="@color/primary_purple" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 3: Average Score -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/statsCard3"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#30FFFFFF"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_analytics"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/tvAvgScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0.0/10"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.9"
                            android:text="Avg Score"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:id="@+id/pbStats3"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="8dp"
                            android:max="100"
                            android:progress="0"
                            android:progressTint="#FFA500" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Card 4: Active Roadmaps -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/statsCard4"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:backgroundTint="#30FFFFFF"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_roadmap"
                            android:layout_marginTop="5dp"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/tvActiveRoadmaps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.9"
                            android:text="Roadmaps"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:id="@+id/pbStats4"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="8dp"
                            android:max="100"
                            android:progress="0"
                            android:progressTint="@color/tpo_primary" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <!-- ========== CHARTS SECTION ========== -->
            <LinearLayout
                android:id="@+id/chartsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="ðŸ“Š Performance Analytics"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Performance Distribution Chart -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/performanceChartCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#30FFFFFF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="Score Distribution"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/chartContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Job Role Distribution Chart -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/roleDistributionCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#30FFFFFF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:text="Job Role Distribution"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/roleChartContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- ========== FILTERS SECTION ========== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="ðŸ” Filter Students"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Tab Layout -->
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabFilter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/card_unselected"
                    app:tabIndicatorColor="@color/tpo_primary"
                    app:tabSelectedTextColor="@color/white"
                    app:tabTextColor="#80FFFFFF" />

                <!-- Search & Filters -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#30FFFFFF"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Search -->
                        <EditText
                            android:id="@+id/etSearchStudent"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/answer_input_background"
                            android:drawableStart="@drawable/ic_search"
                            android:drawablePadding="12dp"
                            android:hint="Search by name or ID"
                            android:inputType="text"
                            android:padding="12dp"
                            android:textColor="@color/white"
                            android:textColorHint="#80FFFFFF"
                            android:textSize="15sp" />

                        <!-- Job Role Spinner -->
                        <Spinner
                            android:id="@+id/spinnerJobRole"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/answer_input_background"
                            android:padding="12dp" />

                        <!-- Score Filter Spinner -->
                        <Spinner
                            android:id="@+id/spinnerScoreFilter"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/answer_input_background"
                            android:padding="12dp" />

                        <!-- Buttons -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnApplyFilters"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:backgroundTint="@color/tpo_primary"
                                android:text="Apply"
                                android:textAllCaps="false"
                                app:cornerRadius="12dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnClearFilters"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="Clear"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                app:cornerRadius="12dp"
                                app:strokeColor="@color/white"
                                app:strokeWidth="1dp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- ========== STUDENTS LIST ========== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ‘¥ Students"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvStudentCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 students"
                        android:textColor="@color/tpo_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- No Students Message -->
                <TextView
                    android:id="@+id/tvNoStudents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:text="No students found"
                    android:textColor="#80FFFFFF"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <!-- Students RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewStudents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="20dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>