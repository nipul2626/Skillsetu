<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

     <!-- ROOT TRANSITION: entry animation for header & grids -->
    <Transition
        android:id="@+id/transition_entry"
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:duration="900"
        motion:staggered="0.12">
        ...
    </Transition>

    <!-- Breathing logo loop -->
    <Transition
        android:id="@+id/transition_logo_breathe"
        motion:constraintSetStart="@+id/logo_small"
        motion:constraintSetEnd="@+id/logo_large"
        motion:duration="1600"
        motion:autoTransition="animateToEnd"
        motion:motionInterpolator="easeInOut">
        ...
    </Transition>

        <OnSwipe
            motion:touchAnchorId="@id/contentScroll"
            motion:touchAnchorSide="top"
            motion:dragDirection="dragUp" />

        <!-- Stagger per child via KeyAttribute if needed -->
    </Transition>

    <!-- Breathing logo loop -->
    <Transition
        android:id="@+id/transition_logo_breathe"
        motion:constraintSetStart="@+id/logo_small"
        motion:constraintSetEnd="@+id/logo_large"
        motion:duration="1600"
        motion:autoTransition="animateToEnd"
        motion:motionInterpolator="easeInOut">

        <OnClick
            motion:targetId="@id/headerLogoContainer"
            motion:clickAction="transitionToStart" />

        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@id/headerLogoContainer"
                motion:framePosition="50"
                android:scaleX="1.08"
                android:scaleY="1.08"
                android:alpha="1" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <!-- Fade everything down slightly & off-screen for entry -->
        <Constraint
            android:id="@id/headerLogoContainer">
            <Layout
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginTop="52dp"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent" />
            <Transform android:alpha="0" android:translationY="-32dp" />
        </Constraint>

        <Constraint android:id="@id/txtAppTitle">
            <Transform android:alpha="0" android:translationY="-16dp" />
        </Constraint>

        <Constraint android:id="@id/txtSubtitle">
            <Transform android:alpha="0" android:translationY="-8dp" />
        </Constraint>

        <Constraint android:id="@id/txtHeaderCta">
            <Transform android:alpha="0" android:translationY="8dp" />
        </Constraint>

        <Constraint android:id="@id/contentScroll">
            <Transform android:alpha="0" android:translationY="32dp" />
        </Constraint>

        <Constraint android:id="@id/btnStart">
            <Transform android:alpha="0" android:translationY="32dp" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/headerLogoContainer">
            <Transform android:alpha="1" android:translationY="0dp" />
        </Constraint>
        <Constraint android:id="@id/txtAppTitle">
            <Transform android:alpha="1" android:translationY="0dp" />
        </Constraint>
        <Constraint android:id="@id/txtSubtitle">
            <Transform android:alpha="1" android:translationY="0dp" />
        </Constraint>
        <Constraint android:id="@id/txtHeaderCta">
            <Transform android:alpha="1" android:translationY="0dp" />
        </Constraint>
        <Constraint android:id="@id/contentScroll">
            <Transform android:alpha="1" android:translationY="0dp" />
        </Constraint>
        <Constraint android:id="@id/btnStart">
            <Transform android:alpha="1" android:translationY="0dp" />
        </Constraint>
    </ConstraintSet>

    <!-- Small & large for breathing logo -->
    <ConstraintSet android:id="@+id/logo_small">
        <Constraint android:id="@id/headerLogoContainer">
            <Transform android:scaleX="1.0" android:scaleY="1.0" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/logo_large">
        <Constraint android:id="@id/headerLogoContainer">
            <Transform android:scaleX="1.06" android:scaleY="1.06" />
        </Constraint>
    </ConstraintSet>

</MotionScene>